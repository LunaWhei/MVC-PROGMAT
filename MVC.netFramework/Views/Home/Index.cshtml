
@{
    ViewBag.Title = "Home Page";
}
<h1> Nasze dostępne książki</h1>
<h4>lista książek które są dodane do bazy danych i nie zostały wypożyczone przez nikogo</h4>
<table>
    <tr>
        <th>Tytuł</th>
        <th>Autor</th>
        <th>Rodzaj okładki</th>
    </tr>

    @foreach (MVC.netFramework.Models.RentedBooksModel details in Model)
    {


        <tr>
            <td>@details.Title</td>
            <td>@details.Author</td>
            <td>@details.Cover</td>
            <td><button>Wypożycz</button></td>
        </tr>


    }
</table>
    <style>

        .books {
            display: flex;
        }

            .books p {
                margin: 20px;
            }

        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 15px;
            min-width: 33%;
            border: 1px solid #ddd;
            text-align: left;
            width: 200px;
        }
    </style>